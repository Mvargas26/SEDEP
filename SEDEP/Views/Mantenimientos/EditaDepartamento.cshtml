
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edición de Departamentos";
}


<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form>
        <div class="mb-3">
            <label for="Departamento" class="form-label">Nombre del Departamento</label>
            <input type="text" id="Departamento" class="form-control" value="@Model.Departamento" required maxlength="255">
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Mantenimientos/ManteniDepartamentos" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar
            </button>
        </div>
    </form>
</div>