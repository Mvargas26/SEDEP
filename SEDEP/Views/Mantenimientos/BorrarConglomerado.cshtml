@model Modelos.ConglomeradoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Eliminar  Conglomerado";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form id="formEliminarConglomerado" asp-action="BorrarConglomerado" method="post">
        <input type="hidden" name="IdConglomerado" value="@Model.IdConglomerado" />

        <div class="mb-3">
            <label asp-for="IdConglomerado" class="form-label">Id del Conglomerado</label>
            <input asp-for="IdConglomerado" class="form-control" readonly disabled />
        </div>

        <div class="mb-3">
            <label asp-for="NombreConglomerado" class="form-label">Nombre del Conglomerado</label>
            <input asp-for="NombreConglomerado" class="form-control" required maxlength="255" readonly disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label">Descripción del Conglomerado</label>
            <input asp-for="Descripcion" id="Descripcion" class="form-control" value="@Model.Descripcion" required maxlength="500" readonly disabled />
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Mantenimientos/ManteniConglomerados" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <!-- Botón que abre el modal -->
            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmarEliminacion">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
        </div>
    </form>
</div>

<!-- Modal de confirmación -->
<div class="modal fade" id="confirmarEliminacion" tabindex="-1" aria-labelledby="confirmarEliminacionLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmarEliminacionLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                ¿Realmente desea eliminar el conglomerado <strong>@Model.NombreConglomerado</strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" onclick="document.getElementById('formEliminarConglomerado').submit();">Sí</button>
            </div>
        </div>
    </div>
</div>
