@model Modelos.FuncionarioModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edición de Funcionaos";
}
<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="EditaFuncionario" method="post">
        <div class="mb-3">
            <label class="form-label">Cédula</label>
            <input class="form-control" value="@Model.Cedula" disabled />
            <input type="hidden" asp-for="Cedula" />
        </div>

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" required maxlength="255" />
        </div>

        <div class="mb-3">
            <label asp-for="Apellido1" class="form-label">Primer Apellido</label>
            <input asp-for="Apellido1" class="form-control" required maxlength="255" />
        </div>

        <div class="mb-3">
            <label asp-for="Apellido2" class="form-label">Segundo Apellido</label>
            <input asp-for="Apellido2" class="form-control" required maxlength="255" />
        </div>

        <div class="mb-3">
            <label asp-for="Correo" class="form-label">Correo Electrónico</label>
            <input asp-for="Correo" type="email" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Contraseña</label>
            <input asp-for="Password" type="password" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Departamento" class="form-label">Departamento</label>
            <input asp-for="Departamento" class="form-control" required maxlength="255" />
        </div>

        <div class="mb-3">
            <label asp-for="Rol" class="form-label">Rol</label>
            <input asp-for="Rol" class="form-control" required maxlength="255" />
        </div>

        <div class="mb-3">
            <label asp-for="Puesto" class="form-label">Puesto</label>
            <input asp-for="Puesto" class="form-control" required maxlength="255" />
        </div>

        <div class="mb-3">
            <label asp-for="Estado" class="form-label">Estado</label>
            <input asp-for="Estado" class="form-control" required maxlength="255" />
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Mantenimientos/ManteniFuncionarios" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar
            </button>
        </div>
    </form>
</div>