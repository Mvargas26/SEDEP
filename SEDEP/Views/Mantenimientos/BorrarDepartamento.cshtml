@model Modelos.DepartamentoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Borrar Departamento";
}
<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="BorrarDepartamento" method="post">
        <input type="hidden" name="IdDepartamento" value="@Model.IdDepartamento" />

        <div class="mb-3">
            <label class="form-label">ID del Departamento</label>
            <input type="text" class="form-control" value="@Model.IdDepartamento" readonly disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">Nombre del Departamento</label>
            <input type="text" class="form-control" value="@Model.Departamento" readonly disabled />
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Mantenimientos/ManteniDepartamentos" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-danger btn-sm">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
        </div>
    </form>
</div>