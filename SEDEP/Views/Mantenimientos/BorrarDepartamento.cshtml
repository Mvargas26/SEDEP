@model Modelos.DepartamentoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Borrar Departamento";
}
<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form id="formEliminarDepartamento" asp-action="BorrarDepartamento" method="post">
        <input type="hidden" name="IdDepartamento" value="@Model.IdDepartamento" />

        <div class="mb-3">
            <label class="form-label">ID del Departamento</label>
            <input type="text" class="form-control" value="@Model.IdDepartamento" readonly disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">Nombre del Departamento</label>
            <input type="text" class="form-control" value="@Model.Departamento" readonly disabled />
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Mantenimientos/ManteniDepartamentos" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <!-- Botón que abre el modal -->
            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmarEliminacion">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
        </div>
    </form>
</div>

<!-- Modal de confirmación -->
<div class="modal fade" id="confirmarEliminacion" tabindex="-1" aria-labelledby="confirmarEliminacionLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmarEliminacionLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                ¿Realmente desea eliminar el departamento <strong>@Model.Departamento</strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" onclick="document.getElementById('formEliminarDepartamento').submit();">
                    Sí
                </button>
            </div>
        </div>
    </div>
</div>
