@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Información de conglomerados";
}
<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

<div class="table-responsive mt-3">
    <table class="table table-striped table-bordered text-center">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.NombreConglomerado</td>
                <td>@c.Descripcion</td>
                <td>
                    <!-- abre el modal -->
                     <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#infoModal-@c.IdConglomerado">
                        Ver Detalles
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>

@* Modal informativo por cada conglomerado *@
@foreach (var c in Model)
{
    <div class="modal fade" id="infoModal-@c.IdConglomerado" tabindex="-1" aria-labelledby="infoModalLabel-@c.IdConglomerado" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="infoModalLabel-@c.IdConglomerado">Detalles del Conglomerado</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Nombre:</strong> @c.NombreConglomerado</p>
                    <p><strong>Descripción:</strong> @c.Descripcion</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}