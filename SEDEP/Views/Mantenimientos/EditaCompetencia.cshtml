@model Modelos.CompetenciasModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editar Competencia";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <form asp-action="EditarCompetencia" method="post">
        <input type="hidden" id="IdCompetencia" asp-for="IdCompetencia">
        <div class="mb-3">
            <label for="Competencia" class="form-label">Nombre de la Competencia</label>
            <input type="text" id="Competencia" class="form-control" asp-for="Competencia" required maxlength="255">
        </div>
        <div class="mb-3">
            <label for="Calificacion" class="form-label">Calificacion</label>
            <input type="number" id="Calificacion" class="form-control" asp-for="Calificacion" required min="0" max="100">
        </div>
        <div class="mb-3">
            <label for="IdTipoCompetencia" class="form-label">Tipo de Objetivo</label>
            <select id="IdTipoCompetencia" name="IdTipoCompetencia" class="form-control" asp-for="IdTipoCompetencia">
                <option value="1">Competencia nivel Gerencial</option>
                <option value="2">Competencia nivel  asistencia y Apoyo</option>
                <option value="3">Competencias Nivel Profesional</option>
                <option value="4">Competencias Nivel Jefatura</option>
            </select>
        </div>
        <div class="d-flex justify-content-between">
            <a href="/Mantenimientos/ManteniCompetencias" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar Cambios
            </button>
        </div>
    </form>
</div>
