@model Modelos.FuncionarioModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Borrar Funcionario";
}
<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="BorrarFuncionario" method="post">
        <div class="mb-3">
            <label asp-for="Cedula" class="form-label">Cédula</label>
            <input asp-for="Cedula" class="form-control" readonly disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" required maxlength="255" readonly disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Apellido1" class="form-label">Primer Apellido</label>
            <input asp-for="Apellido1" class="form-control" required maxlength="255" readonly disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Apellido2" class="form-label">Segundo Apellido</label>
            <input asp-for="Apellido2" class="form-control" required maxlength="255" readonly disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Correo" class="form-label">Correo Electrónico</label>
            <input asp-for="Correo" type="email" class="form-control" required readonly disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Departamento" class="form-label">Departamento</label>
            <input asp-for="Departamento" class="form-control" required maxlength="255" readonly disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Rol" class="form-label">Rol</label>
            <input asp-for="Rol" class="form-control" required maxlength="255" readonly disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Puesto" class="form-label">Puesto</label>
            <input asp-for="Puesto" class="form-control" required maxlength="255" readonly disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Estado" class="form-label">Estado</label>
            <input asp-for="Estado" class="form-control" required maxlength="255" readonly disabled />
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Mantenimientos/ManteniFuncionarios" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-danger btn-sm">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
        </div>
    </form>
</div>
