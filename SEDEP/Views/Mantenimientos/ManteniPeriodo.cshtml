@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Gestión de Períodos";
}

<div class="container mt-4">
    <h2 class="mb-4">Gestión de Períodos</h2>

    <!-- Enlace para crear un nuevo período -->
    <div class="d-flex justify-content-between">
        <a href="/Mantenimientos/CreaPeriodo" class="btn btn-primary">
            <i class="fas fa-plus"></i> Crear Nuevo Período
        </a>
    </div>

    <!-- Tabla de períodos -->
    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>Año</th>
                    <th>Fecha máxima</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var periodo in Model)
                {
                    <tr>
                        <td>@periodo.Año</td>
                        <td>@periodo.FechaMaxima.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="/Mantenimientos/EditarPeriodo/@periodo.Año" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Modificar
                            </a>

                            <!-- Botón para mostrar modal de eliminación -->
                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalEliminarPeriodo-@periodo.Año">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modales de confirmación para cada período -->
@foreach (var periodo in Model)
{
    <div class="modal fade" id="modalEliminarPeriodo-@periodo.Año" tabindex="-1" aria-labelledby="modalEliminarPeriodoLabel-@periodo.Año" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalEliminarPeriodoLabel-@periodo.Año">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Realmente desea eliminar el período <strong>@periodo.Año - @periodo.FechaMaxima.ToString("dd/MM/yyyy")</strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <form asp-action="EliminarPeriodo" method="post">
                        <input type="hidden" name="año" value="@periodo.Año" />
                        <button type="submit" class="btn btn-danger">Sí</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
