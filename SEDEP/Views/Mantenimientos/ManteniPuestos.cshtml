@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Gestión de Puestos";
}

<div class="container mt-4">
    <h2 class="mb-4">Gestión de Puestos</h2>

    <!-- Crear un nuevo puesto -->
    <div class="d-flex justify-content-between">
        <a href="/Mantenimientos/CreaPuesto" class="btn btn-primary">
            <i class="fas fa-plus"></i> Crear Nuevo Puesto
        </a>
    </div>

    <!-- Tabla de puestos -->
    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered text-center">
            <tr>
                <th>ID</th>
                <th>Nombre del Puesto</th>
                <th>Acciones</th>
            </tr>
            <tbody>
                @foreach (var puesto in Model)
                {
                    <tr>
                        <td>@puesto.idPuesto</td>
                        <td>@puesto.Puesto</td>
                        <td>
                            <a href="/Mantenimientos/EditaPuesto/@puesto.idPuesto" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <button class="btn btn-danger btn-sm" onclick="confirmarEliminar(@puesto.idPuesto, '@puesto.Puesto')">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal para eliminar -->
<div class="modal fade" id="confirmacionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">Confirmación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p id="mensajeConfirmacion"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" id="btnEliminar">Sí</button>
            </div>
        </div>
    </div>
</div>
