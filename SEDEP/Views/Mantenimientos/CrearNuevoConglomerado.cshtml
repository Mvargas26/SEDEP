@model Modelos.ConglomeradoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Creación de Conglomerado";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="CrearNuevoConglomerado" method="post">
        <input type="hidden" asp-for="IdConglomerado" />

        <div class="mb-3">
            <label asp-for="NombreConglomerado" class="form-label">Nombre del Conglomerado</label>
            <input asp-for="NombreConglomerado" class="form-control" required maxlength="255">
        </div>

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label">Descripción del Conglomerado</label>
            <input asp-for="Descripcion" class="form-control" required maxlength="500">
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Mantenimientos/ManteniConglomerados" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar
            </button>
        </div>
    </form>
</div>