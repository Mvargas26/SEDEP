@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Crear Meta";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form method="post" asp-action="CrearMeta">
        <div class="mb-3">
            <label for="Meta" class="form-label">Nombre de la meta</label>
            <input type="text" id="Meta" name="Meta" class="form-control" required pattern=".*\S.*" maxlength="255">
        </div>

        <div class="mb-3">
            <label for="Porcentaje" class="form-label">Porcentaje</label>
            <input type="number" id="Porcentaje" name="Porcentaje" class="form-control" required min="0" max="100">
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Mantenimientos/GestionObjetivos" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar
            </button>
        </div>
    </form>
</div>