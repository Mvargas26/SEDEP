@model SEDEP.Models.LoginViewModel
@{
    Layout = null;
}


@* De momento el login no hereda de layout *@

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SEDEP - Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>

    <div class="logo-container text-center my-3">
        <img src="~/assets/img/logo.jpg" alt="Nuevo Logo" class="img-fluid">
    </div>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="login-container p-4 border rounded shadow bg-light">
            <h2 class="text-center">SEDEP</h2>
            <p class="text-center">Sistema de Evaluación de Desempeño para Empleados Públicos</p>

            <form asp-action="Login" asp-controller="Auth" method="post">
                <div class="mb-3 text-start">
                    <label class="form-label">Ingrese su Cédula:</label>
                    <input asp-for="Usuario" type="text" class="form-control" placeholder="Su usuario aquí">
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label">Ingrese su Contraseña:</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Su contraseña aquí">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 text-center">
                    <a asp-controller="Auth" asp-action="ForgotPassword" class="forgot-password">¿Olvidó su Contraseña?</a>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>

                <div class="mb-3 text-danger">
                    <div asp-validation-summary="All"></div>
                </div>
            </form>
        </div>
    </div>

</body>
</html>