@model SEDEP.Models.LoginViewModel
@{
    Layout = null;
}


@* De momento el login no hereda de layout *@

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SEDEP - Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>

    <div class="logo-container">
        <img src="~/assets/img/logo.jpg" alt="Nuevo Logo">
    </div>

    <div class="login-container">
        <h2>SEDEP</h2>
        <p>Sistema de Evaluación de Desempeño para Empleados Públicos</p>

        <form asp-action="Login" asp-controller="Auth" method="post">
            <div class="mb-3 text-start">
                <label class="form-label">Ingrese su Usuario:</label>
                <input asp-for="Usuario" type="text" placeholder="Su usuario aquí">
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="mb-3 text-start">
                <label class="form-label">Ingrese su Contraseña:</label>
                <input asp-for="Password" type="password" placeholder="Su contraseña aquí">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <a href="#" class="forgot-password">¿Olvidó su Contraseña?</a>

            <button type="submit" class="btn-login mt-3">Entrar</button>

            <div asp-validation-summary="All" class="text-danger mt-2"></div>
        </form>
    </div>
</body>
</html>
