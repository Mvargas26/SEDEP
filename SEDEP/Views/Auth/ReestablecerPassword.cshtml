@model SEDEP.Models.AuthViewModel.ReestablecerPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<form asp-action="ReestablecerPassword" asp-controller="Auth" method="post">
    <div class="mb-3 text-start">
        <label class="form-label">Nueva Contraseña:</label>
        <input asp-for="NuevaContrasena" type="password" class="form-control"
               placeholder="Ingrese su nueva contraseña" required minlength="8"
               oninvalid="this.setCustomValidity('La contraseña debe tener al menos 8 caracteres')"
               oninput="this.setCustomValidity('')">
    </div>

    <div class="mb-3 text-start">
        <label class="form-label">Confirmar Contraseña:</label>
        <input asp-for="ConfirmarContrasena" type="password" class="form-control"
               placeholder="Confirme su contraseña" required
               oninvalid="this.setCustomValidity('Confirme su contraseña')"
               oninput="this.setCustomValidity('')">
    </div>

    <div class="text-center">
        <a asp-action="Login" asp-controller="Auth" class="text-decoration-none link">Volver al Inicio de Sesión</a>
    </div>

    <button type="submit" class="btn-login btn btn-primary w-100 mt-3">Restablecer Contraseña</button>
</form>
