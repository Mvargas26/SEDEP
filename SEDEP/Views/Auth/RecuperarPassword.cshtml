@using SEDEP.Models.AuthViewModel
@model RecuperarPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<form asp-action="RecuperarPassword" asp-controller="Auth" method="post">
    <div class="mb-3 text-start">
        <label class="form-label">Ingrese su Cédula:</label>
        <input asp-for="Cedula" type="text" class="form-control" id="cedulaInput"
               placeholder="Ingrese su cédula" required maxlength="20"
               pattern="^[a-zA-Z0-9]{1,20}$"
               title="Solo se permiten letras y números (sin espacios ni símbolos)"
               oninvalid="validarCedula(this)"
               oninput="this.setCustomValidity('')">
    </div>

    <div class="mb-3 text-start">
        <label class="form-label">Ingrese su Correo Electrónico:</label>
        <input asp-for="Correo" type="email" class="form-control"
               placeholder="Ingrese su correo electrónico" required
               oninvalid="this.setCustomValidity('Por favor, ingrese un correo válido')"
               oninput="this.setCustomValidity('')"
               id="correoInput">
    </div>

    <div class="text-center">
        <a asp-action="Login" asp-controller="Auth" class="text-decoration-none link">Volver al Inicio de Sesión</a>
    </div>

    <button type="submit" class="btn-login btn btn-primary w-100 mt-3">Recuperar Contraseña</button>
</form>
