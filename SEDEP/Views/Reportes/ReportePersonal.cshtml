@model Modelos.EvaluacionModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Reporte Personal";
}

<div class="container mt-5">

    <div class="card shadow-sm p-4 mb-4">
        <h4 class="text-primary">Evaluación Finalizada</h4>
        <p><strong>Funcionario:</strong> @Model.Funcionario.Nombre @Model.Funcionario.Apellido1 @Model.Funcionario.Apellido2</p>
        <p><strong>Departamento:</strong> @Model.Funcionario.Departamento</p>
        <p><strong>Fecha de Creación:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
        <p><strong>Estado:</strong> @Model.EstadoEvaluacion</p>
        <p><strong>Observaciones:</strong> @Model.Observaciones</p>
    </div>

    <a href="/Reporte/ReportePersonalPDF" class="btn btn-primary" target="_blank">
        <i class="fas fa-file-download"></i> Descargar PDF
    </a>
</div>
