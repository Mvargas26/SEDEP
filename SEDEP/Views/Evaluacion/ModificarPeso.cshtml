@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Modificar Peso de Objetivo";
}

<div class="container mt-4 mb-5">
    <h2 class="mb-3">Modificar peso de objetivo</h2>

    <!-- Mostramos solo el nombre del objetivo en la alerta -->
    <div class="alert alert-info">
        <strong>Objetivo seleccionado:</strong> @ViewBag.ObjName
    </div>

    <p>Ingrese el nuevo valor para el peso del objetivo seleccionado.</p>

    <form method="get" action="/Evaluacion/EvaluacionSubalterno">
        <div class="mb-3">
            <label for="pesoNuevo" class="form-label">Peso actual</label>
            <input type="text" class="form-control" id="pesoNuevo" name="pesoNuevo"
                   value="@ViewBag.PesoActual" />
        </div>

        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a href="/Evaluacion/EvaluacionSubalterno" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
