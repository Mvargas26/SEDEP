@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Modificar Valor Actual";
}

<div class="container mt-4 mb-5">
    <h2 class="mb-3">Modificar valor actual</h2>

    <div class="alert alert-info">
        <strong>Objetivo seleccionado:</strong> @ViewBag.ObjName <br />
        <strong>Meta:</strong> @ViewBag.MetaValue
    </div>

    <p>Ingrese el valor actual de este objetivo.</p>

    <form method="get" action="/Evaluacion/RealizarEvaluacionComoFuncionario">
        <div class="mb-3">
            <label for="actualNuevo" class="form-label">Valor Actual</label>
            <input type="text" class="form-control" id="actualNuevo" name="actualNuevo" value="@ViewBag.ActualValue" />
        </div>

        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a href="/Evaluacion/RealizarEvaluacionComoFuncionario" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
