<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SEDEP</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <script defer src="~/js/scripts.js"></script>
</head>
<body>
    <div class="wrapper">
        <nav class="sidebar">
            <div class="sidebar-header">
                <h2>
                    <a href="~/" style="color: inherit; text-decoration: none;">
                        SEDEP
                    </a>
                </h2>
            </div>

            @if (IsSectionDefined("SideMenu"))
            {
                @RenderSection("SideMenu", required: false)
            }
            else
            {
                <ul class="sidebar-menu">
                    <li><a href="~/Mantenimientos">Mantenimientos</a></li>
                    <li><a href="~/Evaluacion">Evaluación</a></li>
                    <li><a href="~/Reportes">Reportes</a></li>
                </ul>
            }
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <header class="topbar">
                <h1>Sistema de Evaluación del Desempeño para Empleados Públicos</h1>
                <div class="user-menu">
                    <button id="userIcon" class="user-icon" type="button">👤</button>
                    <ul id="userMenu" class="dropdown-menu">
                        <li><a href="/logout">Cerrar sesión</a></li>
                    </ul>
                </div>
            </header>
            <main>
                @RenderBody()
            </main>
            <footer>
                <img src="~/assets/img/logo.jpg" alt="CUC Logo">
                <p>&copy; 2025 SEDEP - Todos los derechos reservados</p>
            </footer>
        </div>
    </div>
</body>
</html>
